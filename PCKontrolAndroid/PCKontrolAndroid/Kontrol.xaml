            <Button Text="■" Grid.Row="1" Grid.Column="0"/>
            <Button Text="V +" Grid.Row="1" Grid.Column="1"/>
            <Button Text="V -" Grid.Row="1" Grid.Column="2"/>
            <Button Text="Klavye" Grid.Row="2" Grid.Column="0"/>
            <Button Text="Çıkış" Grid.Row="2" Grid.Column="1"/>
            <Button Text="Sağ Tık" Grid.Row="2" Grid.Column="2"/>
        </Grid>
    </AbsoluteLayout>

</ContentPage>